{
  "name": "qmk-hid-host",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "npm run build:live",
    "build": "tsc",
    "build:live": "ts-node-dev --respawn --transpile-only --exit-child --watch src src/index.ts",
    "pkg": "pkg dist/index.js --output ../dist/QMK.HID.Host.Server --config package.json",
    "copy:config": "node -e \"require('fs').copyFileSync('src/config.json', '../dist/QMK.HID.Host.Server.json')\"",
    "publish": "npm run build && npm run pkg && npm run copy:config",
    "check": "eslint . && prettier . --check",
    "fix": "eslint . --fix && prettier . --write",
    "hook:pre-commit": "npx lint-staged --quiet"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zzeneg/qmk-hid-host.git"
  },
  "author": "zzeneg",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zzeneg/qmk-hid-host/issues"
  },
  "homepage": "https://github.com/zzeneg/qmk-hid-host#readme",
  "devDependencies": {
    "@types/node": "^18.11.18",
    "@types/node-hid": "^1.3.1",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lefthook": "^1.3.6",
    "lint-staged": "^13.2.0",
    "prettier": "2.8.3",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-hid": "^2.1.2",
    "socket.io": "^4.5.4"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint",
      "prettier"
    ],
    "!**/*.{ts,js}": "prettier --write --ignore-unknown"
  },
  "pkg": {
    "assets": [
      "node_modules/node-hid/build/Release/HID.node"
    ],
    "targets": [
      "latest-win-x64"
    ]
  }
}
